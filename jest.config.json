{
  "cacheDirectory": ".jest-cache",
  "preset": "ts-jest",
  "transform": {
    ".(ts|tsx)": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "projects": [
    {
      "displayName": "unit-client",
      "testEnvironment": "jsdom",
      "testMatch": [
        "<rootDir>/tests/unit-client/**/*.spec.ts"
      ],
      "coverageProvider": "v8",
      "collectCoverage": true,
      "coverageReporters": ["json-summary", "lcov"],
      "collectCoverageFrom": [
        "**/*.{ts,tsx,js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/tests/"
      ]
    },
    {
      "displayName": "unit-server",
      "testEnvironment": "node",
      "testMatch": [
        "<rootDir>/tests/unit-server/**/*.spec.ts"
      ],
      "collectCoverage": true,
      "coverageProvider": "v8",
      "coverageReporters": ["json-summary", "lcov"],
      "collectCoverageFrom": [
        "**/*.{ts,tsx,js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/tests/"
      ]
    },
    {
      "displayName": "integration-server",
      "testEnvironment": "node",
      "testMatch": [
        "<rootDir>/tests/integration-server/**/*.spec.ts"
      ],
      "collectCoverage": true,
      "coverageProvider": "v8",
      "coverageReporters": ["json-summary", "lcov"],
      "collectCoverageFrom": [
        "**/*.{ts,tsx,js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/server/repositories/migrations/",
        "<rootDir>/tests/"
      ]
    }
  ],
  "coverageThreshold": {
    "global": {
      "statements": 80,
      "branches": 80,
      "lines": 80,
      "functions": 80
    }
  }
}
