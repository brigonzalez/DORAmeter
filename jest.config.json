{
  "cacheDirectory": ".jest-cache",
  "preset": "ts-jest",
  "transform": {
    ".(ts|tsx)": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "projects": [
    {
      "displayName": "unit-client",
      "testEnvironment": "jsdom",
      "testMatch": [
        "<rootDir>/tests/unit-client/**/*.spec.ts"
      ],
      "collectCoverage": true,
      "coverageReporters": ["json-summary", "lcov"],
      "collectCoverageFrom": [
        "**/*.{ts,tsx,js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/tests/"
      ],
      "moduleNameMapper": {
        "\\.(css|scss|svg|ico)$": "<rootDir>/tests/stubs/empty-stub.js"
      }
    },
    {
      "displayName": "unit-server",
      "testEnvironment": "node",
      "testMatch": [
        "<rootDir>/tests/unit-server/**/*.spec.ts"
      ],
      "collectCoverage": true,
      "coverageReporters": ["json-summary", "lcov"],
      "collectCoverageFrom": [
        "**/*.{ts,tsx,js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/tests/"
      ]
    },
    {
      "displayName": "integration-client",
      "testEnvironment": "jsdom",
      "testMatch": [
        "<rootDir>/tests/integration-client/**/*.spec.ts",
        "<rootDir>/tests/integration-client/**/*.spec.tsx"
      ],
      "collectCoverage": true,
      "coverageReporters": ["json-summary", "lcov"],
      "collectCoverageFrom": [
        "**/*.{ts,tsx,js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/tests/"
      ],
      "moduleNameMapper": {
        "\\.(css|scss|svg|ico)$": "<rootDir>/tests/stubs/empty-stub.js"
      }
    },
    {
      "displayName": "integration-server",
      "testEnvironment": "node",
      "testMatch": [
        "<rootDir>/tests/integration-server/**/*.spec.ts"
      ],
      "collectCoverage": true,
      "coverageReporters": ["json-summary", "lcov"],
      "collectCoverageFrom": [
        "**/*.{ts,tsx,js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/server/repositories/migrations/",
        "<rootDir>/tests/"
      ]
    }
  ],
  "coverageThreshold": {
    "global": {
      "statements": 85,
      "branches": 75,
      "lines": 85,
      "functions": 85
    }
  }
}
