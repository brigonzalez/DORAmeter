{
  "cacheDirectory": ".jest-cache",
  "preset": "ts-jest",
  "transform": {
    ".(ts|tsx)": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "projects": [
    {
      "displayName": "server",
      "testEnvironment": "node",
      "testMatch": [
        "<rootDir>/tests/server/**/*.spec.ts"
      ]
    }
  ]
}
