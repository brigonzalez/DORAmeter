{
  "cacheDirectory": ".jest-cache",
  "coverageDirectory": ".jest-coverage",
  "preset": "ts-jest",
  "transform": {
    ".(ts|tsx)": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "projects": [
    {
      "displayName": "client",
      "testEnvironment": "jsdom",
      "testMatch": [
        "<rootDir>/tests/client/**/*.spec.ts"
      ]
    },
    {
      "displayName": "server",
      "testEnvironment": "node",
      "testMatch": [
        "<rootDir>/tests/server/**/*.spec.ts"
      ]
    }
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "coveragePathIgnorePatterns": [
    "<rootDir>/server/repositories/migrations/"
  ]
}