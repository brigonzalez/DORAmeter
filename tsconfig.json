{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": [
      "jest",
      "node"
    ],
    "target": "es6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./dist-server"
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "tests/*",
    "client/*"
  ]
}
